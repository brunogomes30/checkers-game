<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCam" near="-5" far="5" left="-5" right="5" bottom="-5" top="5">
            <from x="0" y="0" z="3" />
            <to x="00" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
        <background r="0.3" g="0.3" b="0.3" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>

        <omni id="ambient" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <attenuation constant="0.0" linear="0.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="camoTexture" file="scenes/images/camo.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="5">
            <emission r="0.2" g="0.2" b="0.2" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.9" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.9" a="1.0" />
            <specular r="0.1" g="0.1" b="0.9" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations></animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="tentOuter">
            <patch degree_u="1" parts_u="10" degree_v="2" parts_v="10">
                <controlpoint x="2" y="0" z="-2" />
                <controlpoint x="2" y="5" z="0" />
                <controlpoint x="2" y="0" z="2" />

                <controlpoint x="-2" y="0" z="-2" />
                <controlpoint x="-2" y="5" z="0" />
                <controlpoint x="-2" y="0" z="2" />
            </patch>
        </primitive>
        <primitive id="tentInner">
            <patch degree_u="1" parts_u="10" degree_v="2" parts_v="10">
                <controlpoint x="-2" y="0" z="-2" />
                <controlpoint x="-2" y="5" z="0" />
                <controlpoint x="-2" y="0" z="2" />

                <controlpoint x="2" y="0" z="-2" />
                <controlpoint x="2" y="5" z="0" />
                <controlpoint x="2" y="0" z="2" />
            </patch>
        </primitive>
    </primitives>

    <models>
        <model id="boardModel" file="board/board.obj" />
        <model id="whiteModel" file="piece/white_promoted.obj" />
        <model id="blackModel" file="piece/black.obj" />
    </models>   

    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="camoTexture" />
            <children>
                <componentref id="board" />
                <componentref id="white" />
                <componentref id="black" />
            </children>
        </component>
        <component id="board" class="board">
            <transformation></transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="camoTexture" />
            <children>
                <modelref id="boardModel" />

            </children>
        </component>
        <component id="white" class="white_piece">
            <transformation>
                <translate x="-0.625" y="0.15" z="0.875" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <modelref id="whiteModel" />

            </children>
        </component>

        <component id="black" class="black_piece">
            <transformation>
                <translate x="0.875" y="0.15" z="0.875" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <modelref id="blackModel" />

            </children>
        </component>
    </components>

    
</sxs>