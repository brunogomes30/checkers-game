<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="2.5" z="2" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCam" near="-5" far="5" left="-5" right="5" bottom="-5" top="5">
            <from x="0" y="0" z="3" />
            <to x="00" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
        <background r="0.3" g="0.3" b="0.3" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>

        <omni id="ambient" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <attenuation constant="0.0" linear="0.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="camoTexture" file="scenes/images/camo.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.1" b="0.1" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations></animations>

    <primitives>
        <primitive id="sphere">
            <sphere radius="1" stacks="256" slices="256" />
        </primitive>
    </primitives>

    <models>
        <model id="trueno" file="trueno.obj" />
    </models>   

    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="sphereComp" />
                <modelref id="trueno" />

                <componentref id="sphereComp" />
            </children>
        </component>

        <component id="sphereComp">
            <transformation>
                <translate x="0" y="10" z="0" />
                <scale x="2" y="2" z="2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        
    </components>

    
</sxs>