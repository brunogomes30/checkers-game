<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="2.5" z="2.5" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCam" near="-5" far="5" left="-5" right="5" bottom="-5" top="5">
            <from x="0" y="0" z="3" />
            <to x="00" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
        <background r="0.3" g="0.3" b="0.3" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1" >
            <location x="5.8" y="7.9" z="-1.0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>

        <spot id="pieceSpotlight" angle="30" exponent="127" enabled="0" class="piece-spotlight">
            <location x="0.0" y="1.5" z="0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.0" linear="0.75" quadratic="0.0" />
            <target x="0" y="0" z="0" />
        </spot>

        <omni id="ambient" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <attenuation constant="0.0" linear="0.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="camoTexture" file="scenes/images/camo.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="5">
            <emission r="0.2" g="0.2" b="0.2" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.9" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.9" a="1.0" />
            <specular r="0.1" g="0.1" b="0.9" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        
        <keyframeanim id="piece-move" animation-speed="1.0" loop="false">
            <param name="posx" />
            <param name="posz" />
            <keyframe instant="0.0">
                <translation x="0" y="0" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="0.1">
                <translation x="0" y="0" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="0.50" y="1.5" z="1.0" />
            </keyframe>
            <keyframe instant="1.0" function="cubic-bezier_0.28_1.17_1_1.0">
                <translation x="posx" y="0.0" z="posz" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1.0" y="1.0" z="1.0" />
            </keyframe>
        </keyframeanim>
        
        <keyframeanim id="piece-selected" animation-speed="2" loop="true">
            <keyframe instant="0.0">
                <translation x="0" y="0" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="0.2">
                <translation x="0" y="-0.015" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1.25" y="0.5" z="1.25" />
            </keyframe>
            <keyframe instant="0.4" >
                <translation x="0" y="0.03" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="0.75" y="1.5" z="0.75" />
            </keyframe>
            
            <keyframe instant="0.9" function="quadratic_0_1_1_0">
                <translation x="0" y="0.1" z="0"/>
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="1.6" function="quadratic_0_0_-1_0">
                <translation x="0" y="0.03" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="0.75" y="1.5" z="0.75" />
            </keyframe>

            <keyframe instant="1.8" >
                <translation x="0" y="0" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </keyframeanim>
        
    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="tentOuter">
            <patch degree_u="1" parts_u="10" degree_v="2" parts_v="10">
                <controlpoint x="2" y="0" z="-2" />
                <controlpoint x="2" y="5" z="0" />
                <controlpoint x="2" y="0" z="2" />

                <controlpoint x="-2" y="0" z="-2" />
                <controlpoint x="-2" y="5" z="0" />
                <controlpoint x="-2" y="0" z="2" />
            </patch>
        </primitive>
        <primitive id="tentInner">
            <patch degree_u="1" parts_u="10" degree_v="2" parts_v="10">
                <controlpoint x="-2" y="0" z="-2" />
                <controlpoint x="-2" y="5" z="0" />
                <controlpoint x="-2" y="0" z="2" />

                <controlpoint x="2" y="0" z="-2" />
                <controlpoint x="2" y="5" z="0" />
                <controlpoint x="2" y="0" z="2" />
            </patch>
        </primitive>
    </primitives>

    <models>
        <model id="boardModel" file="board/board.obj" />
        <model id="whiteModel" file="piece/white.obj" />
        <model id="blackModel" file="piece/black.obj" />
    </models>

    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <componentref id="board" />
            </children>
        </component>
        <component id="board" class="board" pickable="true">
            <transformation>
                <translate x="0.0" y="0.0" z="0.0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <modelref id="boardModel" />

            </children>
        </component>
        <component id="white" class="white-piece" pickable="true">
            <transformation>
                <translate x="-0.0" y="0.15" z="0.0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <modelref id="whiteModel" />

            </children>
        </component>

        <component id="black" class="black-piece" pickable="true">
            <transformation>
                <translate x="0.0" y="0.15" z="0.0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <modelref id="blackModel" />

            </children>
        </component>
    </components>


</sxs>