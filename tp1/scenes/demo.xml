<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="orthoCam" near="-20" far="20" left="-20" right="20" bottom="-20" top="20">
            <from x="0" y="15" z="0" />
            <to x="-0.1" y="-20" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <spot id="spotlight" enabled="1" angle="20" exponent="0" >
            <location x="5.0" y="5.0" z="5.0" w="1" />
            <target x="0" y="1" z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/rickboy.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="torus">
            <torus outter="5" inner="4" slices="11" loops="12" />
        </primitive>
        <primitive id="cone">
            <cylinder base="3" top="0" height="5" slices="16" stacks="16" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="5" y2="0" z2="0" x3="0" y3="5" z3="0" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" stacks="12" slices="12" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="2" z="1" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="triangle" />
                <componentref id="hat" />
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="sphere2">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="sphere" />
                <componentref id="sphere3" />
            </children>
        </component>
        <component id="sphere3">
           <transformation>
               <translate x="5" y="0" z="0" />
           </transformation>
           <materials>
               <material id="demoMaterial" />
           </materials>
           <texture id="none"/>
           <children>
               <primitiveref id="sphere" />
           </children>
        </component>
        <component id="sphere4">
            <transformation>
                <translate x="10" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

    </components>
</sxs>