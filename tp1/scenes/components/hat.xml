<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="hatMaterial" shininess="10">
            <emission r="0.2" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.6" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.1" b="0.1" a="1.0" />
            <specular r="0.6" g="0.1" b="0.1" a="1.0" />
        </material>
        <material id="headMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.2" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.9" g="0.2" b="0.2" a="1.0" />
        </material>
        <material id="sunMaterial" shininess="10">
            <emission r="0.2" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="0.2" b="0.2" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="torus">
            <torus outer="5" inner="4" slices="11" loops="12" />
        </primitive>
        <primitive id="cone">
            <cylinder base="3" top="0" height="5" slices="16" stacks="16" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="3" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" stacks="12" slices="12" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">

            <materials>
                <material id="headMaterial" />
            </materials>

            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>

            <texture id="none"/>

            <children>
                <componentref id="hat" />
                <primitiveref id="sphere" />
                <componentref id="sun"/>
            </children>
        </component>
        <component id="hat">
            <materials>
                <material id="hatMaterial" />
            </materials>
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="-135"/>
                <rotate axis="y" angle="-45"/>
            </transformation>

            <texture id="demoTexture"/>
        
            <children>
                <primitiveref id="cone"/>
                <componentref id="hatTop"/>
            </children>
        </component>
        <component id="hatTop">
            <materials>
                <material id="inherit" />
            </materials>
            <transformation>
                <translate z="5" x="0" y="0"/>
                <scale x="3" y="3" z="1"/>
            </transformation>

            <texture id="inherit"/>

            <children>
                <primitiveref id="rectangle" />
                <componentref id="reverseRectangle" />
            </children>
        </component>
        <component id="reverseRectangle">
            <materials>
                <material id="inherit" />
            </materials>
            <transformation>
                <rotate axis="x" angle="180" />
            </transformation>

            <texture id="inherit"/>

            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="sun">
            <materials>
                <material id="sunMaterial" />
            </materials>
            <transformation>
                <translate x="2" z="2" y="0"/>
                <scale x="0.2" y="0.2" z="0.2" />
            </transformation>

            <texture id="none"/>

            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</sxs>