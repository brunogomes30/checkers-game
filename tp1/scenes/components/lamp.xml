<sxs>
    <scene root="lamp" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="15" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1" exponent="1">
            <location x="0" y="10" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.0" linear="0.05" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="woodMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.43137254901960786" g="0.14901960784313725" b="0.054901960784313725" a="1.0" />
            <diffuse r="0.43137254901960786" g="0.14901960784313725" b="0.054901960784313725" a="1.0" />
            <specular r="0.43137254901960786" g="0.14901960784313725" b="0.054901960784313725" a="1.0" />
        </material>
        
        <material id="abajour1" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8470588235294118" g="0.8784313725490196" b="0.2784313725490196" a="0.1"  />
            <diffuse r="0.8470588235294118" g="0.8784313725490196" b="0.2784313725490196" a="0.5"  />
            <specular r="0.5470588235294118" g="0.5784313725490196" b="0.0784313725490196" a="0.1"  />
        </material>
        <material id="abajour2" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1843137254901961" g="0.32941176470588235" b="0.32941176470588235" a="0.1"  />
            <diffuse r="0.0" g="0.2" b="0.2" a="0.5"  />
            <specular r="0.1" g="0.3" b="0.3" a="0.1"  />
        </material>
        <material id="abajour3" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4117647058823529" g="0.17647058823529413" b="0.43137254901960786" a="1.0" />
            <diffuse r="0.4117647058823529" g="0.17647058823529413" b="0.43137254901960786" a="1.0" />
            <specular r="0.2" g="0.1" b="0.2" a="1.0" />
        </material>
        
    </materials>

    <transformations>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="torus">
            <torus outer="5" inner="4" slices="11" loops="12" />
        </primitive>
        <primitive id="cone">
            <cylinder base="3" top="0" height="5" slices="16" stacks="16" />
        </primitive>
        <primitive id="abajour">
            <cylinder base="1" top="0.5" height="1" slices="16" stacks="16" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="3" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="2" stacks="12" slices="12" />
        </primitive>
        <primitive id="unitCylinder">
            <cylinder base="1" top="1" height="1" slices="16" stacks="16" />
        </primitive>
    </primitives>

    <components>
        <!-- Start lamp -->
        <!-- Materials defined above -->

        <component id="lamp">
            <materials>
                <material id="woodMaterial"/>
            </materials>
            <transformation>
            </transformation>
            <texture id="none"/>
            <children>
                <componentref id="lampAbajour" />
                <componentref id="lampPole"/>
                <componentref id="lampBase"/>
            </children>
        </component>

        <component id="lampAbajour">
            <materials>
                <material id="abajour1"/>
                <material id="abajour2"/>
                <material id="abajour3"/>
            </materials>
            <transformation>
                <translate x="0" y="4.6" z="0" />
                <scale x="1" y="1.2" z="1" />
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <texture id="inherit"/>
            <children>
                <primitiveref id="abajour"/>
            </children>
        </component>

        <component id="lampPole">
            <materials>
                <material id="inherit"/>
            </materials>
            <transformation>
                <translate x="0" y="2.5" z="0" />
                <scale x="0.12" y="5" z="0.12" />
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <texture id="inherit"/>
            <children>
                <primitiveref id="unitCylinder"/>
            </children>
        </component>

        <component id="lampBase">
            <materials>
                <material id="inherit"/>
            </materials>
            <transformation>
                <translate x="0" y="0.12" z="0" />
                <scale x="0.1" y="0.03" z="0.1" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <texture id="inherit"/>
            <children>
                <primitiveref id="torus"/>
            </children>
        </component>


        <!-- End lamp -->
    </components>
</sxs>