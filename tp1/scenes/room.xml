<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="roomMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0784313725490196" b="0.5764705882352941" a="1.0"  />
            <diffuse r="1.0" g="0.0784313725490196" b="0.5764705882352941" a="1.0"  />
            <specular r="1.0" g="0.0784313725490196" b="0.5764705882352941" a="1.0"  />
        </material>
        <material id="skinMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.7529411764705882" b="0.796078431372549" a="1.0" />
            <diffuse r="1.0" g="0.7529411764705882" b="0.796078431372549" a="1.0"   />
            <specular r="1.0" g="0.7529411764705882" b="0.796078431372549" a="1.0"   />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="torus">
            <torus outter="5" inner="4" slices="11" loops="12" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="0.8" height="1" slices="16" stacks="16" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="3" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" stacks="12" slices="12" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="room" />
                <componentref id="present"/>
            </children>
        </component>

        <component id="present">
            <transformation>

            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <children>
                <componentref id="presentData" />
            </children>
        </component>

        <component id="presentData">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="0.1" y="0.1" z="0.1"/>
            </transformation>
            <materials>
                <material id="skinMaterial" />
            </materials>
            <children>
                <componentref id="ball1" />
                <componentref id="ball2" />
                <componentref id="stick"/>
            </children>
        </component>

        <component id="ball1">
            <transformation>
                <translate x="1" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <children>
                <primitiveref id="sphere" />
            </children>

        </component>
        <component id="ball2">
            <transformation>
                <translate x="-1" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="stick">
            <transformation>
                
                <scale x="1" y="10" z="1" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <primitiveref id="cylinder"/>
            </children>
        </component>
        <component id="room">
            <transformation>
                <scale x="50" y="50" z="50" />
            </transformation>
            <materials>
                <material id="roomMaterial" />
            </materials>

            <children>
                <componentref id="cubeBothfaces" />
            </children>
        </component>

        <component id="cubeBothfaces">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="cube_bottom" />
                <componentref id="cube_top" />
                <componentref id="cube_zneg" />
                <componentref id="cube_zpos" />
                <componentref id="cube_xpos" />
                <componentref id="cube_xneg" />
            </children>
        </component>
        <component id="cube_bottom">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90"/>
                
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>
        <component id="cube_top">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90"/>
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>
        <component id="cube_zneg">
            <transformation>
                <translate x="0" y="0" z = "-0.5"/>
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>
        <component id="cube_zpos">
            <transformation>
                <translate x="0" y="0" z = "0.5"/>
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>

        <component id="cube_xpos">
            <transformation>
                <translate x="0.5" y="0" z = "0"/>
                <rotate axis="y" angle="90" />
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>
        <component id="cube_xneg">
            <transformation>
                <translate x="-0.5" y="0" z = "0"/>
                <rotate axis="y" angle="90" />
             </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <componentref id="square_both"/>
            </children>
        </component>

        <component id="square_both">
            <transformation>

            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <children>
                <primitiveref id="square" />
                <componentref id="square_reverse" />
            </children>
        </component>
        <component id="square_reverse">
            <materials>
                <material id="inherit" />
            </materials>
            <transformation>
                <rotate axis="x" angle="180" />
            </transformation>
            <children>
                <primitiveref id="square" />
            </children>
        </component>
        
    </components>
</sxs>